#!/usr/bin/env bash

VPN_DIR=/etc/openvpn/client

if [ -z `ls $VPN_DIR` ]; then
	read -sp "PIA VPN clients are not installed here (press Enter to exit)" nullvar
	exit
fi

SELECTED=`ls $VPN_DIR | cut -d'.' -f 1  | fzf`
SERVICE=openvpn-client@$SELECTED
ACTION=start

if [ `systemctl is-active $SERVICE` == 'active' ]; then
	ACTION=stop
fi

echo $ACTION $SELECTED
sudo systemctl $ACTION $SERVICE
